<div class="card mb-4" {% if match_height %}data-mh="{{ match_height }}"{% endif %}>
    {% if post.feature_image.thumb %}
        <img class="card-img-top" src="{{ post.feature_image.thumb }}" alt="{{ post.name }}">
  {% else %}
    <div class="card-img-top text-center d-flex d-inline-block justify-content-center" style="height:250px; background-color:#eee; color:#fff;"><i class="align-self-center fa fa-camera fa-4x"></i></div>
  {% endif %}

  <div class="card-body">

    {%- if post.template.suffix == 'event' -%}
        {%- assign post_date = post.metadata.event_date_start -%}
    {%- else -%}
        {%- assign post_date = post.published_at -%}
    {%- endif -%}

    {% if post_date %}
      <div class="text-secondary mb-2 font-weight-bold text-sm">{{ post_date | date: "short_month_day_year" }}</div>
    {% endif %}

    {% if post.title %}
      <h4 class="card-title">
        {{ post.title }}
      </h4>
    {% endif %}

    {% if post.excerpt %}
      <p class="card-text text-muted">
        {{ post.excerpt }}
      </p>
    {% endif %}

    <div class="text-center">
      <a href="{{ post.url }}" class="btn btn-primary btn-block px-4 d-inline-block m-1">
        {% if post.metadata.embed_file %}
          <i class="fa fa-play"></i> {{ 'snippets.post_grid_item.play' | t }}
        {% else %}
          {% if post_action_label %}{{ post_action_label }}{% else %}{{ 'general.actions.read_more' | t }}{% endif %} <i class="fa fa-arrow-right"></i></a>
        {% endif %}
      </a>
    </div>

  </div>
</div>
