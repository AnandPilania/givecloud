<div class="card mb-4">

    <div {% if match_height %}data-mh="{{ match_height }}"{% endif %}>
        {% if image %}
            <img class="card-img-top" src="{{ image }}" alt="{{ post.title }}">
        {% else %}
            <div class="card-img-top text-center d-flex d-inline-block justify-content-center" style="height:250px; background-color:#eee; color:#fff;"><i class="align-self-center fa fa-camera fa-4x"></i></div>
        {% endif %}

        <div class="card-body">

            {% if lead_in %}
                <div class="text-secondary mb-2 font-weight-bold text-sm">{{ lead_in }}</div>
            {% endif %}

            {% if heading %}
                <h4 class="card-title">
                    {{ heading }}
                </h4>
            {% endif %}

            {% if description %}
                <p class="card-text text-muted">
                    {{ description }}
                </p>
            {% endif %}
        </div>
    </div>

    {% if button_label %}
        <div class="text-center mx-3 mb-3">
            <a href="{{ button_url }}" class="btn btn-primary btn-block">{{ button_label }}</a>
        </div>
    {% endif %}
</div>