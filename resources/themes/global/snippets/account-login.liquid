<div class="card">
    <div class="card-body">

        <h2 class="card-title text-left mt-1 mb-4">{{ settings.login_heading }}</h2>

        {{ settings.login_subheading }}

        {% include 'social-login' %}

        <form name="loginForm" novalidate>
            <div class="alert alert-danger" role="alert" style="display:none"></div>
            <div class="form-group labelify">
                <label><i class="fa fa-envelope-o"></i> {{ 'general.forms.email' | t }}</label>
                <input type="email" class="form-control" name="email" autocomplete="username" required>
            </div>
            <div class="form-group labelify">
                <label><i class="fa fa-lock"></i> {{ 'general.forms.password' | t }}</label>
                <input type="password" class="form-control" name="password" autocomplete="current-password" required>
            </div>
            <div class="text-center mb-2">
                <button type="submit" class="btn btn-lg btn-block btn-pill btn-primary"><i class="fa fa-log-in"></i> {{ settings.login_button_label }}</button>
            </div>
        </form>

    </div>
</div>
