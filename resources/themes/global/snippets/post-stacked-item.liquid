<div class="card wow fadeIn" {% if match_height %}mh-data="{{ match_height }}"{% endif %}>
    <div class="row w-100 h-100 no-gutters">
        <div class="col-3 mceBackground bg-info rounded-left mceEditable" {% if post.feature_image.thumb %}style="background-image: url('{{ post.feature_image.thumb }}'); background-size: cover; background-position: center center; background-attachment: scroll;"{% endif %}>&nbsp;</div>
        <div class="col-9">
            <div class="card-body mceEditable">
                {% if post.published_at %}
                    <div class="text-secondary mb-2 font-weight-bold text-sm text-truncate">{{ post.published_at | date: "short_month_day_year" }}</div>
                {% endif %}
                {% if post.title %}
                    <h3 class="card-title text-left text-truncate mb-2"><a href="{{ post.url }}">{{ post.title }}</a></h3>
                {% endif %}
                {% if post.excerpt %}
                    <p class="card-text text-truncate">
                        {{ post.excerpt }}
                    </p>
                {% endif %}
            </div>
        </div>
    </div>
</div>