                            {% endif %}
                        </template>
                        <template v-else>
                            <!-- desktop buttons / mobile non-sticky -->
                            <div class="{% if settings.pg_with_pay_floating_donate_button %} d-none d-md-block{% endif %}">
                                <button type="submit" id="btn-pay" class="btn btn-block btn-xl btn-pill btn-success mb-3" {% unless product.qty_available %}disabled{% endunless %}>
                                {% if product.metadata.pay_page_complete_purchase_btn_text %}
                                    <i class="fa fa-lock"></i> {{ product.metadata.pay_page_complete_purchase_btn_text }} (${ money(total_amt,true) })
                                {% else %}
                                    <i class="fa fa-lock"></i> {{ 'templates.product.donate' | t : price: '${ money(total_amt,true) }' }}
                                {% endif %}
                                </button>

                                {% if settings.show_payment_ssl_security %}
                                    <div class="text-center">
                                        {% include 'gc-lock' %}
                                    </div>
                                {% endif %}
                            </div>

                            <!-- mobile sticky buttons (fixed to bottom) -->
                            {% if settings.pg_with_pay_floating_donate_button %}
                                <div data-sticky-after="#amount_section" class="sticky-div hide-important fixed-bottom shadow-sm p-3 d-flex d-sm-flex d-md-none text-center bg-white align-items-center justify-content-between">
                                    {% if settings.show_payment_ssl_security %}
                                        <div class="text-left">
                                            {% include 'gc-lock' %}
                                        </div>
                                    {% endif %}
                                    <div>
                                        <button type="submit" class="btn btn-block btn-lg btn-pill btn-success px-3" {% unless product.qty_available %}disabled{% endunless %}>
                                        {% if product.metadata.pay_page_complete_purchase_btn_text %}
                                            <i class="fa fa-lock"></i> {{ product.metadata.pay_page_complete_purchase_btn_text }} (${ money(total_amt,true) })
                                        {% else %}
                                            <i class="fa fa-lock"></i> {{ 'templates.product.donate' | t : price: '${ money(total_amt,true) }' }}
                                        {% endif %}
                                        </button>
                                    </div>
                                </div>
                            {% endif %}
                        </template>
                    </div>

                </div>
            </div>

            {% if product.enable_social_buttons and product.social_urls %}
                <div class="row d-md-none" v-cloak>
                    <div class="col-12 col-md-6 col-lg-7">
                        {% include 'product-social-actions' %}
                    </div>
                </div>
            {% endif %}
        </div>

    </form>

</section>

