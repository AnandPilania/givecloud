{% if post.alternate_image %}
    {% assign _header_image = post.alternate_image.full %}
{% else %}
    {% assign _header_image = post_type.feature_image.full %}
{% endif %}

{% include 'header-image', header_title: post.type_name, header_image: _header_image, header_crumb_1: post.type_name, header_crumb_1_url: post.type_handle %}

<div class="page-content post-content">

    <section class="mt-4">
        <div class="container">

            <div class="mb-5 text-center" style="margin-top:-140px;">

                {% if post.feature_image.full %}
                    <div class="avatar-xl" style="background-image:url('{{ post.feature_image.full }}');"></div>
                {% else %}
                    <div class="avatar-xl" style="background-color:#eee; color:#fff; text-align:center; padding-top:85px;"><i class="fa fa-camera fa-5x fa-fw"></i></div>
                {% endif %}

                <h1 class="mt-4">{{ post.title }}<br><small>{{ post.excerpt }}</small></h1>
            <div>

            <div class="container mb-5">
                {{ post.content }}
            </div>

        </div>
    </section>

    {% if post.show_sharing_links %}
        <div class="container pb-4">{% sharing_links title: post.title, channels: settings.post_sharing_links_channels %}</div>
    {% endif %}

</div>
