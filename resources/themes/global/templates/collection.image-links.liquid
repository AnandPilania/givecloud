{% include 'header-image', header_title: category.name, header_image: category.feature_image.full %}

<div class="page-content">

{% if category.body %}
    {{ category.body }}
{% endif %}

{% if products.size == 1 %}
    {% assign product_col_classes = "col-12" %}
{% elsif products.size == 2 %}
    {% assign product_col_classes = "col-sm-6 col-12" %}
{% elsif products.size == 3 %}
    {% assign product_col_classes = "col-md-4 col-sm-6 col-12" %}
{% else %}
    {% assign product_col_classes = "col-lg-3 col-md-4 col-sm-6 col-12" %}
{% endif %}

{% if products.size > 0 %}
    <section class="section-light section-sm">
        <div class="container">
            <div class="row">
                {% for product in products %}
                    <div class="{{ product_col_classes }} my-3 {% if settings.animations %}wow fadeInUp{% endif %}" {% if settings.animations %}data-wow-delay="0.{{ forloop.index }}s"{% endif %}>
                        {% include 'image-link-item', size: 'md', text: product.name, link: product.url, image: product.feature_image.thumb %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endif %}

</div>
