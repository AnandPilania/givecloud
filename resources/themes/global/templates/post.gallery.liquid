{% if post.alternate_image %}
    {% assign _header_image = post.alternate_image.full %}
{% elsif post.feature_image %}
    {% assign _header_image = post.feature_image.full %}
{% else %}
    {% assign _header_image = post_type.feature_image.full %}
{% endif %}

{% capture '_header_title' %}
    <small class="text-sm text-secondary">{{ post.published_at | date: "short_month_day_year" }}</small><br>{{ post.title }}
{% endcapture %}

{% include 'header-image', header_title: _header_title, header_image: _header_image %}

<div class="page-content post-content -post-type-{{ post_type.id }} -post-{{ post.id }}">

    <div class="container pt-3 pb-5">
        <div class="wow fadeIn">
            {{ post.content }}
        </div>
    </div>

    {% if post.show_sharing_links %}
        <div class="container pb-4">{% sharing_links title: post.title, channels: settings.post_sharing_links_channels %}</div>
    {% endif %}

</div>
